#include <iostream>
using namespace std;

int main() {
    int num;
    int count = 0;

    while (true) {
        cout << "Enter a number (0 to stop): ";
        cin >> num;

        if (num == 0) {
            break;  // stop the loop
        }

        count++; // count the number
    }

    cout << "Total numbers entered: " << count << endl;

    return 0;
}
