#include <iostream>
using namespace std;

int main() {
    int size;

    // 1. Ask user for array size
    cout << "Enter the size of the array: "<< endl;
    cin >> size;

    int arr[size]; // create array of given size

    // 2. Fill the array with user input
    for (int i = 0; i < size; i++)
    {
        cout << "Enter element " << i + 1 << ": ";
        cin >> arr[i];
    }

    // 3. Calculate sum of all elements
    int sum = 0;
    for (int i = 0; i < size; i++) 
    {
        sum += arr[i];
    }
    cout << "The sum of all elements is: " << sum << endl;

    return 0;
}
