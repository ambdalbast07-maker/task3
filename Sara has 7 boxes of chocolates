
#include <iostream>
using namespace std;

int main() {
    const int numBoxes = 7; 
    int chocolates[numBoxes]; 
    for (int i = 0; i < numBoxes; i++) 
  {
        cout << "Enter the number of chocolates in box " <<  endl;
        cin >> chocolates[i];
    }
    int total = 0;
    int maxChocolates = chocolates[0];
    int maxBoxIndex = 0; 
    for (int i = 0; i < numBoxes; i++)
     {
        total += chocolates[i]; 
        if (chocolates[i] > maxChocolates)
       {
            maxChocolates = chocolates[i];
            maxBoxIndex = i; 
        }
    }

    cout << "Total chocolates: " << total << endl;
    cout << "Box " << (maxBoxIndex + 1) << " has the most chocolates: " << maxChocolates << endl;

    return 0;
}

